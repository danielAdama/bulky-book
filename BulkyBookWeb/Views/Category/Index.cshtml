@model List<BulkyBookWeb.Models.Category>;
@{
	ViewData["Title"] = "Category";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6 text-start">
			<h1 class="text-primary">Category List</h1>
		</div>
		<div class="col-6 text-end">
			<a type="button" class="btn btn-primary" asp-controller="Category" asp-action="Create">
				<i class="bi bi-plus-circle"></i>&nbsp; Create New Category
			</a>
		</div>
	</div>
	<br />

</div>
<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display Order
			</th>
			<th>
				Genre
			</th>
			<th>
				ISBN
			</th>
			<th>
				Author
			</th>
			<th>
				Publisher
			</th>
			<th>
				Date and Time
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td with=10%>
					@obj.Name
				</td>
				<td with=10%>
					@obj.DisplayOrder
				</td>
				<td with=10%>
					@obj.Genre
				</td>
				<td with=10%>
					@obj.ISBN
				</td>
				<td with=10%>
					@obj.Author
				</td>
				<td with=10%>
					@obj.Publisher
				</td>
				<td with=10%>
					@obj.DateTimeNow
				</td>
				<td>
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-3"><i class="bi bi-pen"></i>&nbsp;Edit</a>
					<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-3"><i class="bi bi-trash3-fill"></i>&nbsp;Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>